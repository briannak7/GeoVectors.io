{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "padding": 10,
  "title": {
    "text": "US Prisons circa 2015",
    "fontSize": 20
  },

  "layer": [
    {
      "data": {
        "url": "us-10m.json",
        "format": {
          "type": "topojson",
          "feature": "states"
        }
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "prisons.json"
      },

      "projection": {
        "type": "albersUsa"
      },

      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 25},
        "color": {"value": "#54818c"}
      }
    },
    {
      "data": {
        "url": "west.json"
      },
      "mark": "line",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 3},
        "color": {
          "value": "#853d8f"
        }
      }
    },
    {
      "data": {
        "url": "alaska.json",
        "format": {
          "property": "features"
        }
      },
      "mark": "line",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 3},
        "color": {
          "value": "#853d8f"
        }
      }
    },
    {
      "data": {
        "url": "midwest.json"
      },
      "mark": "line",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 3},
        "color": {
          "value": "rgb(4,86,168)"
        }
      }
    },
    {
      "data": {
        "url": "northeast.json"
      },
      "mark": "line",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 3},
        "color": {
          "value": "#465154"
        }
      }
    },
    {
      "data": {
        "url": "southwest.json"
      },
      "mark": "line",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 3},
        "color": {
          "value": "#BA0000"
        }
      }
    },
    {
      "data": {
        "url": "southeast.json"
      },
      "mark": "line",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 3},
        "color": {
          "value": "#FFAE03"
        }
      }
    },
    {
      "data": {
        "url": "southeast.json"
      },
      "mark": {
        "type": "line",
        "strokeWidth": 4
      },
      "encoding": {
        "size": {"value": 3},
        "color": {
          "field": "id",
          "type": "nominal",
          "legend": {
            "title": null,
            "orient": "bottom-right",
            "symbolStrokeWidth": 5,
            "symbolSize": 1000,
            "offset": 0
          },
          "scale": {
            "domain": [
              "West",
              "Midwest",
              "Southwest",
              "Southeast",
              "Northeast"
            ],
            "range": [
              "#853d8f",
              "rgb(4,86,168)",
              "#BA0000",
              "#FFAE03",
              "#465154"
            ]
          }
        }
      }
    }
  ]
}
